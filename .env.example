# Port (optional - defaults to 3000)
PORT=3000

# JWT Secret Key (REQUIRED for production)
# Generate a random string: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-here

# MongoDB Connection (optional - defaults to JSON file storage)
# If not provided, app uses local JSON file database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/pennywise-todo

# Node Environment
NODE_ENV=production
